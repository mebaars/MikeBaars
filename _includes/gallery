<div class="thumbnail">
    <a href="{{ site.urlimg }}{{ page.gallery_thumbnail }}" data-clearing data-caption="Thumb">
        <img src="{{ site.urlimg }}{{ page.gallery_thumbnail }}" alt="Thumb" class="thumbnail">
    </a>
</div>
{% endif %}

<div style="display:none;">
    <ul class="clearing-thumbs" data-clearing>
        {% for item in page.gallery %}
        <li>
            <a href="{{ site.urlimg }}{{ item.image_url }}" data-clearing data-caption="{{ item.caption | escape }}">
                <img src="{{ site.urlimg }}{{ item.image_url }}" alt="{{ item.caption | escape }}">
            </a>
        </li>
        {% endfor %}
    </ul>
</div>

<style>
    .thumbnail {
        text-align: center;
        margin-bottom: 20px;
    }
    .thumbnail img {
        width: 150px; /* Adjust size as needed */
        height: auto;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    var links = document.querySelectorAll('[data-clearing]');
    if (links.length) {
        new Foundation.Clearing(links);
    }
});
</script>
