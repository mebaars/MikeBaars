{% endcomment %}

<link href="assets/css/lightbox.css" rel="stylesheet" />

{% assign first_image = page.gallery | first %}


<div class="main-thumbnail">
    <!-- Thumbnail links to the first image in the gallery -->
    <a href="{{ site.urlimg }}{{ first_image.image_url }}" data-lightbox="gallery-set" data-title="{{ first_image.caption | escape }}">
        <img src="{{ site.urlimg }}{{ page.gallery_thumbnail }}" alt="Open Gallery" class="thumbnail">
    </a>
</div>

<!-- Include all gallery images as part of the Lightbox group -->
<div class="gallery">
    {% for item in page.gallery %}
    <a href="{{ site.urlimg }}{{ item.image_url }}" data-lightbox="gallery-set" data-title="{{ item.caption | escape }}"></a>
    {% endfor %}
</div>

