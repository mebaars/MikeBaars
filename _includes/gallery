*   Gallery include file for Lightbox.
*   Specify the main thumbnail and gallery images in the frontmatter:
*
*   gallery_thumbnail: path/to/thumbnail.jpg
*   gallery:
*     - image_url: path/to/image1.jpg
*       caption: "Caption for image 1"
*     - image_url: path/to/image2.jpg
*       caption: "Caption for image 2"
*     # Add more images as needed
*
{% endcomment %}

{% assign main_thumbnail = page.gallery | where: "image_url", page.gallery_thumbnail | first %}

{% if main_thumbnail %}
<div class="main-thumbnail">
    <a href="{{ site.urlimg }}{{ main_thumbnail.image_url }}" data-lightbox="gallery" data-title="{{ main_thumbnail.caption | escape }}">
        <img src="{{ site.urlimg }}{{ main_thumbnail.image_url }}" alt="{{ main_thumbnail.caption | escape }}" class="thumbnail">
    </a>
</div>
{% endif %}

{% for item in page.gallery %}
<a href="{{ site.urlimg }}{{ item.image_url }}" data-lightbox="gallery" data-title="{{ item.caption | escape }}" style="display:none;">
    <img src="{{ site.urlimg }}{{ item.image_url }}" alt="{{ item.caption | escape }}">
</a>
{% endfor %}

